{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
